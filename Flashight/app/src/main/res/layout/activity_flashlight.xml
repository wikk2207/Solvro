<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashlightActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textViewMode"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:foregroundGravity="center"
            android:text="Zamień poniższą liczbę w systemie szesnastkowym na liczbę w systemie dziesiętnym."
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/textView_numberToConvert"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="255"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="88dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:foregroundGravity="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textView_numberToConvert"
            tools:layout_editor_absoluteX="92dp" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="40dp"
            android:foregroundGravity="center"
            android:text="Sprawdź"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:layout_editor_absoluteX="147dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="144dp"
            android:layout_height="94dp"
            android:layout_marginBottom="104dp"
            android:gravity="center"
            android:text="0"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="133dp" />

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="Powrót"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:foregroundGravity="center"/>




</android.support.constraint.ConstraintLayout>