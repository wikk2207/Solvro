<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="333dp"
        tools:layout_editor_absoluteY="92dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:text="Informatyczna latarka!"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="77dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="310dp"
            android:layout_height="44dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Aby włączyć latarkę musisz dokonać konwersji liczb."
            android:textColor="@android:color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="37dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="146dp"
            android:layout_height="21dp"
            android:layout_marginTop="27dp"
            android:text="Wybierz tryb zamiany:"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="124dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="233dp"
            android:layout_height="64dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="75dp">

            <RadioButton
                android:id="@+id/radio_hexToDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="z szesnastkowej na dziesiętną"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_DecToHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z dziesiętnej na szesnastkową"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        android:text="Dalej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>